<%= stylesheet_link_tag "new_survey" %>
  <div class="header-container">
    <div class="card-title-container">
      <h1>Card ID: <%= @card.id %> </h1>
      <h1>New_Paper ID: <%= @card.pp_id%> </h1>
    </div>
    <div class="id-form-container">
      <!-- Form to take you to new survey with specific card id -->
      <%= form_with url: specific_surveys_path, class: "specific-survey-container" do |f| %>
        <%= f.text_field :card_id, class: "card-id-input"%>
        <%= f.submit value: "Enter card_id", class: "button"%>
        <!-- Need to be able to enter new paper id -->
      <% end %> or
      <FORM class= "random-card-container">
      <INPUT TYPE="button" onClick="history.go(0)" class="button button-left" VALUE="Generate Random Card">
      </FORM>
    </div>
  </div>

	<div id="card_container" class="card_container">
    <%= image_tag @card.url%>
    <%= render 'dominant_colors_swatch', color_profiles: @card_swatch_colors %>
	</div>


<!-- Form to enter the survey responses -->
<%= render 'form', survey: @survey, card: @card %> 
